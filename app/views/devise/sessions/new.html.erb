<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-signin") do |f| %>

    <%= image_tag asset_path('login_user.png'), alt:"icon", width:"72", height:"72"%>
    <h1 class="h3 mb-3 font-weight-normal">Please log in</h1>

    <%= f.label :email, class:"sr-only" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail", class:"form-control", placeholder:"Email"%>

    <%= f.label :password, class:"sr-only" %><br />
    <%= f.password_field :password, autocomplete: "current-password", id:"inputPassword", class:"form-control", placeholder:"Password" %>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <%= f.submit "Log in", class:"btn btn-lg btn-primary btn-block"%>

  <% end %>

  <%= render "devise/shared/links" %>
</div>
