<div class="bg-dark mt-5 property-main-photo" style="background-image:url('<%= property_photo_url(@property) %>')">
  <div class="col-md-12 photo-overlay">
  </div>
</div>

<div class="row m-2 p-2">
  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <strong class="d-inline-block mb-2 text-primary">Property Details</strong>
        <h3 class="mb-0">
            <%= @property.name %>
        </h3>
        
        <div class="mb-1 text-muted">
          <%= @property.created_at %>
        </div>
        
        <p class="card-text mb-auto">
          Location: <%= @property.address %>
        </p>
        
        <p class="card-text mb-auto">
          Price: <%= @property.price %>
        </p>
        
        <p class="card-text mb-auto">
          Rooms: <%= @property.rooms %>
        </p>

        <p class="card-text mb-auto">
          Bathrooms: <%= @property.bathrooms %>
        </p>

        <a href="#">Contact Via Us</a>
      
      </div>
       <%= image_tag(@property.photo, class:"card-img-right flex-auto d-none d-md-block", alt:"Thumbnail [200x250]", style:"width: 250px; height: 250px;" ) %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card flex-md-row mb-4 box-shadow h-md-250">
      <div class="card-body d-flex flex-column align-items-start">
        <%= render 'properties/agent_details' %>
      </div>
      <%= image_tag asset_path('login_user.png'), class:"card-img-right flex-auto d-none d-md-block", style:"width: 250px; height: 250px;" %>
    </div>
  </div>
</div>
